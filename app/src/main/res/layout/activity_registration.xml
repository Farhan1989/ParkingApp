<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asadmalik.parkinglifeapp.RegistrationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/txtEmailRegistration"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtEmailRegistration"
        android:layout_marginTop="79dp"
        android:text="Email Address"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="60dp" />

    <EditText
        android:id="@+id/txtEmailRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmailRegistration"
        android:layout_alignStart="@+id/txtEmailRegistration"
        android:layout_below="@+id/txtEmailRegistration"
        android:layout_marginTop="25dp"
        android:text="Password" />

    <EditText
        android:id="@+id/txtPasswordRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRegistrationUser"
        android:onClick="btnRegistrationUser_Click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPasswordRegistration"
        android:layout_alignStart="@+id/txtPasswordRegistration"
        android:layout_below="@+id/txtPasswordRegistration"
        android:layout_marginTop="43dp"
        android:text="Registration" />
</RelativeLayout>
